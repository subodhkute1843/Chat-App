<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >


        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Accont"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_30ssp"
            android:gravity="center" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            android:layout_marginTop="@dimen/_7ssp"
            android:layout_gravity="center"
            app:civ_shadow_color="#3f51b5"/>

        <EditText
            android:id="@+id/registrationName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_12ssp"
            android:background="@drawable/et_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            />

        <EditText
            android:id="@+id/registrationEmail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_25ssp"
            android:background="@drawable/et_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:hint="loren@gmail.com"
            />

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginRight="10dp"
            app:passwordToggleEnabled="true"
            >


            <EditText
                android:id="@+id/registrationPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:hint="********"
                android:inputType="textPassword"
                android:padding="@dimen/_10ssp"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginRight="10dp">


            <EditText
                android:id="@+id/registrationConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:hint="********"
                android:inputType="textPassword"
                android:padding="@dimen/_10ssp"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25ssp"
            android:background="@drawable/btnshape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10ssp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5ssp"
            android:text="Already Have an Account"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtSignIn"
            android:paddingLeft="@dimen/_5ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chonburiregular"
            android:textColor="@color/green"
            android:text="Sign In"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>