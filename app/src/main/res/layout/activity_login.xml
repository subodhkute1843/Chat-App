<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:layout_gravity="center"
            android:background="@color/green"
            android:src="@drawable/chat2" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Welcome Back!"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginRight="10dp">


            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:hint="Emain Address"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10ssp"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginRight="10dp"
            app:passwordToggleEnabled="true"
            >


            <EditText
                android:id="@+id/loginPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_shape"
                android:hint="PassWord"
                android:inputType="textPassword"
                android:padding="@dimen/_10ssp"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/signInBtnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnshape"
            android:text="Sign In"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/progressBarOfMainActivity"
            android:layout_marginTop="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/_5ssp"
            android:text="New User." />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chonburiregular"
            android:gravity="center"
            android:paddingLeft="@dimen/_5ssp"
            android:text="Sign Up"
            android:textColor="@color/green" />

    </LinearLayout>


</RelativeLayout>